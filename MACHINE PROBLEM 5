#include <iostream>
#include <cmath>
#include <iomanip>
using namespace std;

int main(){
	float weight, height, bmi;
	
	cout << "Enter weight in kilograms: ";
	cin >> weight;
	cout << "Enter height in meters: ";
	cin >> height;
	
	bmi = weight / pow(height, 2);
	
	
	cout << "BMI = " << setprecision(4) << bmi;
	return 0;
}
