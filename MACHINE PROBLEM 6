#include <iostream>
#include <cmath>

using namespace std;
int main() 
{
	double princ, rate, time, simp_inte;
	string per;

	cout << "Principal: ";
	cin >> princ;
	cout << "Rate: ";
	cin >> rate;
	cout << "Time: ";
	cin >> time;

	simp_inte = (time* rate * princ) / 100;


	cout << "\nSimple Interest: " << simp_inte;

	return 0;
}
